@model IEnumerable<CarRental.Models.Seller>

@{ 
    ViewData["Title"] = "Sellers";
}

<h1 class="display-4 text-center">@ViewData["Title"]</h1>

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-3">
        <a asp-action="Create" class="btn btn-primary" role="button">Create New</a>
    </div>

    @if(TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">X</button>
            @TempData["SuccessMessage"]
        </div>
    }

    @if(TempData["ErroMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">X</button>
            @TempData["ErroMessage"]
        </div>
    }

    <br/>
    <table class="table table-striped table-hover" id="table-seller">
    <thead>
        <tr class="table-info"> 
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                R$ @Html.DisplayFor(modelItem => item.BaseSalary)
            </td>
            <td>
                <div class="btn-group" role="group" aria-label="Basic example">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                 </div>
            </td>
        </tr>
            }
    </tbody>
</table>
</div>

