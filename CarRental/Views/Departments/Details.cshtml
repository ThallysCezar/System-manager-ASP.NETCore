@model CarRental.Models.Department

@{
    ViewData["Title"] = "Details";
}

<div class="text-center">
    <h1>Vehicle category</h1>
    <div>
        <h1 class="display-4">@ViewData["Title"]</h1>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class = "col-sm-10">
                <strong>@Html.DisplayFor(model => model.Name)</strong>
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary btn-block">Edit</a>
        <a asp-action="Index" class="btn btn-secondary btn-block" role="button">Back</a>
    </div>
</div>

