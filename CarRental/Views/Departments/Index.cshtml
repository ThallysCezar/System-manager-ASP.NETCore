@model IEnumerable<CarRental.Models.Department>

@{
    ViewData["Title"] = "Vehicle category";
}

<h1 class="display-4 text-center">@ViewData["Title"]</h1>
<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-3">
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>

    <table class="table table-striped table-hover" id="table-departments">
        <thead>
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                      <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary" role="button">Edit</a>
                      <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary" role="button">Details</a>
                      <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" role="button">Delete</a>
                    </div>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
