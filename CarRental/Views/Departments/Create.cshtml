@model CarRental.Models.Department

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Vehicle category</h4>
<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group mb-2">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" type="text" class="form-control" aria-describedby="nameHelp" placeholder="Enter Category"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" value="Create" class="btn btn-primary btn-block">Create</button>
    <a asp-action="Index" class="btn btn-secondary btn-block" role="button">Back</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
