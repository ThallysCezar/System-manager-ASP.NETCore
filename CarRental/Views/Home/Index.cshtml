@{
    ViewData["Title"] = "Home Page";
}


    <main role="main">
        @* Inicio do Carousel *@
        <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
          </div>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="https://s3.amazonaws.com/gupy5/production/companies/28780/career/63497/images/2022-07-25_19-07_mainImage.png" class="d-block w-100" alt="Image of Vempraframe">
            </div>
            <div class="carousel-item">
              <img src="https://s3.amazonaws.com/gupy5/production/companies/28780/career/63497/images/2022-07-25_19-07_mainImage.png" class="d-block w-100" alt="Image of Vempraframe">
            </div>
            <div class="carousel-item">
              <img src="https://s3.amazonaws.com/gupy5/production/companies/28780/career/63497/images/2022-07-25_19-07_mainImage.png" class="d-block w-100" alt="Image of Vempraframe">
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon bg-dark" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon bg-dark" aria-hidden="true"></span>
            <span class="visually-hidden bg-black">Next</span>
          </button>
        </div>
        @* Fim do Carousel *@

        @* Inicio do Container *@
       <div class="container">
            <h2>Technologies Used</h2>
            <div class="table-responsive">
                <table class="table table-striped table-sm table-su">
                    <thead>
                    <tr class="table-info">
                        <th>Number</th>
                        <th>Technology</th>
                        <th>About the Technology</th>
                        <th>Purpose of use</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>1</td>
                        <td>ASP.NET Core MVC</td>
                        <td>It is a framework for building web applications.</td>
                        <td>To provide an organised and reliable structure for building the sales system.</td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>MySQL</td>
                        <td>It is an open-source relational database management system.</td>
                        <td>To store and manage car rental data.</td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td>Entity Framework Core</td>
                        <td>It is an ORM framework that allows objects to be mapped to relational databases.</td>
                        <td>It was used to create and manage the database, ensuring greater security and data integrity.</td>
                    </tr>
                    <tr>
                        <td>4</td>
                        <td>Razor Pages</td>
                        <td>It is a web programming model that allows for easier and faster page creation.</td>
                        <td>To create the rental system pages in a faster and easier way.</td>
                    </tr>
                    <tr>
                        <td>5</td>
                        <td>Bootstrap</td>
                        <td>It is a CSS framework for developing responsive interfaces.</td>
                        <td>Create a responsive and user-friendly interface for the end user.</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        @* Fim do Container *@

        <!-- Call to action-->
        <div class="container bg-gradient">
            <div class="jumbotron">
              <h1 class="display-4">Learn more!</h1>
              <p class="lead">If you want to know more about the project and how it works, just follow the link below, where you will find my github with the source code and further explanations about the code!</p>
              <hr class="my-4">
              <p class="lead">
                <a class="btn btn-primary btn-lg" href="https://github.com/ThallysCezar/System-manager-ASP.NETCore" target="_blank" role="button">Github link!</a>
              </p>
            </div>
        </div>
</main>

