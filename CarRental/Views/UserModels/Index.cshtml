@using CarRental.Controllers;
@using CarRental.Models.Enum;
@model IEnumerable<CarRental.Models.UserModel>

@{
    ViewData["Title"] = "Users";
}

<h1 class="display-4 text-center">@ViewData["Title"]</h1>

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-3">
    <a asp-action="Create" class="btn btn-primary" role="button">Create New</a>
    </div>

    @if(TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">X</button>
            @TempData["SuccessMessage"]
        </div>
    }

    @if(TempData["ErroMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">X</button>
            @TempData["ErroMessage"]
        </div>
    }

    <table class="table table-striped table-hover" id="table-user">
    <thead>
        <tr>
            <th class="col">Name</th>
            <th class="col">Login</th>
            <th class="col">Email</th>
            <th class="col">Profile</th>
            <th class="col">Data Register</th>
            <th class="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @(item.Profile == ProfileEnum.Admin ? "Admin" : "Default" )
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataRegister)
                </td> 
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary" role="button">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary" role="button">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" role="button">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

