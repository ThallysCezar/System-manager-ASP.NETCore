@using CarRental.Models.Enum;
@model CarRental.Models.UserPasswordModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>UserModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                @Html.ValidationMessageFor(x=>x.Name)
            </div>
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
                @Html.ValidationMessageFor(x=>x.Login)
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
                @Html.ValidationMessageFor(x=>x.Email)
            </div>
            <div class="form-group mb-2">
                <label asp-for="Profile" class="control-label"></label>
                <select asp-for="Profile" class="form-control">
                    <option value="">Choose..</option>
                    <option value="@ProfileEnum.Admin">Admin</option>
                    <option value="@ProfileEnum.Default">Default</option>
                </select>
                <span asp-validation-for="Profile" class="text-danger"></span>
                @Html.ValidationMessageFor(x=>x.Profile)
            </div>
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary" role="button">Back</a>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
